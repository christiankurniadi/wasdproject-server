<%- include ('../../partials/header.ejs')%> <%- include ('../../partials/navbar.ejs')%> <%- include ('../../partials/sidebar.ejs')%>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Ubah</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/switch">Switch</a></li>
            <li class="breadcrumb-item active">Ubah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form Ubah Switch <%= keyboardSwitch.switchName %></h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/switch/edit/<%= keyboardSwitch._id %>?_method=PUT" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label>Nama switch</label>
                  <select class="form-control select2" style="width: 100%" name="switchName" required>
                    <option selected="selected" value="">--PILIH SWITCH--</option>
                    <option value="Cherry MX Black"
                    <% if(keyboardSwitch.switchName === "Cherry MX Black") { %>
                      selected
                    <% } %>
                    >Cherry MX Black</option>
                    <option value="Cherry MX Brown"
                    <% if(keyboardSwitch.switchName === "Cherry MX Brown") { %>
                      selected
                    <% } %>
                    >Cherry MX Brown</option>
                    <option value="Cherry MX Blue"
                    <% if(keyboardSwitch.switchName === "Cherry MX Blue") { %>
                      selected
                    <% } %>
                    >Cherry MX Blue</option>
                    <option value="Cherry MX Red"
                    <% if(keyboardSwitch.switchName === "Cherry MX Red") { %>
                      selected
                    <% } %>
                    >Cherry MX Red</option>
                    <option value="Cherry MX Silver"
                    <% if(keyboardSwitch.switchName === "Cherry MX Silver") { %>
                      selected
                    <% } %>
                    >Cherry MX Silver</option>
                    <option value="Cherry MX Clear"
                    <% if(keyboardSwitch.switchName === "Cherry MX Clear") { %>
                      selected
                    <% } %>
                    >Cherry MX Clear</option>
                    <option value="Cherry MX Silent Red"
                    <% if(keyboardSwitch.switchName === "Cherry MX Silent Red") { %>
                      selected
                    <% } %>
                    >Cherry MX Silent Red</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="price">Harga switch</label>
                  <input type="number" name="price" class="form-control" value="<%= keyboardSwitch.price %>" id="price" placeholder="Masukkan harga switch" required />
                </div>
              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
          <!-- /.card -->

          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<%- include ('../../partials/footer.ejs')%> <%- include ('../../partials/js.ejs')%>
