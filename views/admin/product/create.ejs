<%- include ('../../partials/header.ejs')%> <%- include ('../../partials/navbar.ejs')%> <%- include ('../../partials/sidebar.ejs')%>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Create</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/category">Kategori</a></li>
            <li class="breadcrumb-item active">Create</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form Tambah Produk</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/switch/create" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label for="name">Nama produk</label>
                  <input type="text" name="name" class="form-control" id="price" placeholder="Masukkan nama produk" required />
                </div>
                <div class="form-group">
                  <label>Kategori</label>
                  <select class="form-control select2" style="width: 100%" name="category" required>
                    <option selected="selected" value="">--PILIH KATEGORI--</option>
                    <% category.forEach(category=>{ %>
                    <option value="<%= category._id %>"><%= category.name %></option>
                    <% }) %>
                  </select>
                </div>
                <div class="form-group">
                  <label>Switch</label>
                  <div class="select2-purple">
                    <select class="form-control select2" data-placeholder="Select a State" multiple="" style="width: 100%" name="switch" required>
                      <% keyboardSwitch.forEach(keyboardSwitch=>{ %>
                      <option value="<%= keyboardSwitch._id %>"><%= keyboardSwitch.switchName %></option>
                      <% }) %>
                    </select>
                  </div>
                </div>
                <div class="form-group">
                  <label>Multiple</label>
                  <select class="select2" multiple="multiple" data-placeholder="Select a State" style="width: 100%">
                    <option>Alabama</option>
                    <option>Alaska</option>
                    <option>California</option>
                    <option>Delaware</option>
                    <option>Tennessee</option>
                    <option>Texas</option>
                    <option>Washington</option>
                  </select>
                </div>
                <div class="form-group">
                  <label>Multiple (.select2-purple)</label>
                  <div class="select2-purple">
                    <select class="select2" multiple="multiple" data-placeholder="Select a State" data-dropdown-css-class="select2-purple" style="width: 100%">
                      <option>Alabama</option>
                      <option>Alaska</option>
                      <option>California</option>
                      <option>Delaware</option>
                      <option>Tennessee</option>
                      <option>Texas</option>
                      <option>Washington</option>
                    </select>
                  </div>
                </div>
                <div class="form-group">
                  <label for="price">Harga switch</label>
                  <input type="number" name="price" class="form-control" id="price" placeholder="Masukkan harga switch" required />
                </div>
              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
          <!-- /.card -->

          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<%- include ('../../partials/footer.ejs')%> <%- include ('../../partials/js.ejs')%>
